{
	"name": "lab-{{ cluster }} coredns alert",
	"type": "query alert",
	"query": "max(last_10m):sum:kubernetes_state.container.ready{cluster:{{ cluster }},container:coredns} < 1",
	"message": "@slack-DPS-lab-{{ alert_channel }}-alerts",
	"tags": [
		"cluster:{{ cluster }}",
		"pipeline:lab-platform-eks-base"
	],
	"options": {
		"thresholds": {
			"critical": 1,
			"warning": 2,
			"critical_recovery": 2
		},
		"notify_audit": false,
		"require_full_window": false,
		"notify_no_data": false,
		"renotify_interval": 0,
		"locked": false,
		"silenced": {},
		"include_tags": true,
		"new_host_delay": 300,
		"escalation_message": ""
	},
	"priority": null
}
