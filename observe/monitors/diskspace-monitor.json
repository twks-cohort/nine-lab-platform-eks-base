{
	"name": "lab-{{ cluster }} disk space alert",
	"type": "query alert",
	"query": "avg(last_10m):avg:system.disk.in_use{cluster:{{ cluster }}} by {host} > 0.9",
	"message": "@slack-DPS-lab-{{ alert_channel }}-alerts",
	"tags": [
		"cluster:{{ cluster }}",
		"pipeline:lab-platform-eks-base"
	],
	"options": {
		"thresholds": {
			"critical": 0.9,
			"warning": 0.8,
			"critical_recovery": 0.75
		},
		"notify_audit": false,
		"require_full_window": false,
		"notify_no_data": false,
		"renotify_interval": 0,
		"locked": false,
		"silenced": {},
		"include_tags": true,
		"new_host_delay": 300,
		"escalation_message": ""
	},
	"priority": null
}
